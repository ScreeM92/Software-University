<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:tns="urn:endorsements" attributeFormDefault="unqualified" elementFormDefault="qualified" targetNamespace="urn:endorsements" xmlns:xs="http://www.w3.org/2001/XMLSchema">
